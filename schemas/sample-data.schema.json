{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ndx-try-aws.gov.uk/schemas/sample-data.schema.json",
  "title": "UK Council Sample Data Schema",
  "description": "JSON Schema for validating generated UK council sample data",
  "version": "1.0.0",
  "type": "object",
  "required": ["metadata", "residents", "serviceRequests", "recordCounts"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["councilName", "region", "generatedAt", "generationTime", "seed", "dataVolume", "sampleMarker", "version"],
      "properties": {
        "councilName": {
          "type": "string",
          "minLength": 1,
          "description": "Name of the council"
        },
        "region": {
          "type": "string",
          "minLength": 1,
          "description": "Geographic region"
        },
        "generatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of generation"
        },
        "generationTime": {
          "type": "number",
          "minimum": 0,
          "maximum": 60,
          "description": "Time taken to generate data in seconds"
        },
        "seed": {
          "type": ["number", "null"],
          "description": "Random seed used for generation"
        },
        "dataVolume": {
          "type": "number",
          "minimum": 1,
          "description": "Number of resident records generated"
        },
        "sampleMarker": {
          "type": "string",
          "const": "SAMPLE",
          "description": "Marker identifying synthetic data"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Schema version"
        }
      }
    },
    "residents": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/resident"
      }
    },
    "serviceRequests": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/serviceRequest"
      }
    },
    "recordCounts": {
      "type": "object",
      "required": ["residents", "serviceRequests", "total"],
      "properties": {
        "residents": {
          "type": "number",
          "minimum": 0
        },
        "serviceRequests": {
          "type": "number",
          "minimum": 0
        },
        "total": {
          "type": "number",
          "minimum": 0
        }
      }
    }
  },
  "definitions": {
    "resident": {
      "type": "object",
      "required": ["residentId", "name", "address", "councilName", "region", "createdAt", "sampleMarker"],
      "properties": {
        "residentId": {
          "type": "string",
          "pattern": "^\\[SAMPLE\\] RES-\\d{6}$",
          "description": "Unique resident identifier with SAMPLE marker"
        },
        "name": {
          "$ref": "#/definitions/name"
        },
        "address": {
          "$ref": "#/definitions/address"
        },
        "councilName": {
          "type": "string",
          "minLength": 1
        },
        "region": {
          "type": "string",
          "minLength": 1
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "sampleMarker": {
          "type": "string",
          "const": "SAMPLE"
        }
      }
    },
    "name": {
      "type": "object",
      "required": ["firstName", "lastName", "fullName", "gender", "sampleMarker"],
      "properties": {
        "firstName": {
          "type": "string",
          "minLength": 1,
          "description": "First name from UK names list"
        },
        "lastName": {
          "type": "string",
          "minLength": 1,
          "description": "Last name from UK surnames list"
        },
        "fullName": {
          "type": "string",
          "minLength": 3,
          "description": "Full name (firstName + lastName)"
        },
        "gender": {
          "type": "string",
          "enum": ["male", "female"],
          "description": "Gender for name selection"
        },
        "sampleMarker": {
          "type": "string",
          "const": "SAMPLE"
        }
      }
    },
    "address": {
      "type": "object",
      "required": ["addressLine1", "addressLine2", "city", "postcode", "formattedAddress", "sampleMarker"],
      "properties": {
        "addressLine1": {
          "type": "string",
          "minLength": 1,
          "description": "First line of address (number + street)"
        },
        "addressLine2": {
          "type": "string",
          "minLength": 1,
          "description": "Second line (district/area)"
        },
        "city": {
          "type": "string",
          "enum": ["Birmingham", "Manchester", "Leeds"],
          "description": "City name"
        },
        "postcode": {
          "type": "string",
          "pattern": "^[A-Z]{1,2}\\d{1,2}\\s\\d[A-Z]{2}$",
          "description": "Valid UK postcode format"
        },
        "formattedAddress": {
          "type": "string",
          "minLength": 10,
          "description": "Full formatted address"
        },
        "sampleMarker": {
          "type": "string",
          "const": "SAMPLE"
        }
      }
    },
    "serviceRequest": {
      "type": "object",
      "required": ["reference", "category", "requestType", "status", "priority", "submittedAt", "lastUpdated", "sampleMarker"],
      "properties": {
        "reference": {
          "type": "string",
          "pattern": "^\\[SAMPLE\\] [A-Z]+-\\d{6}-\\d{5}$",
          "description": "Unique request reference with SAMPLE marker"
        },
        "category": {
          "type": "string",
          "enum": ["Waste & Recycling", "Highways", "Housing", "Council Tax"],
          "description": "Service category"
        },
        "requestType": {
          "type": "string",
          "minLength": 1,
          "description": "Specific request type within category"
        },
        "status": {
          "type": "string",
          "enum": ["new", "in_progress", "resolved"],
          "description": "Current request status"
        },
        "priority": {
          "type": "string",
          "enum": ["low", "medium", "high"],
          "description": "Request priority level"
        },
        "submittedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Submission timestamp"
        },
        "lastUpdated": {
          "type": "string",
          "format": "date-time",
          "description": "Last update timestamp"
        },
        "sampleMarker": {
          "type": "string",
          "const": "SAMPLE"
        }
      }
    }
  }
}
