{# JavaScript for filtering and search - Story 14.2, 14.3 #}
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const filterButtons = document.querySelectorAll('[data-filter]');
    const searchInput = document.querySelector('[data-search-input]');
    const cards = document.querySelectorAll('.ndx-walkthrough-card');
    const grid = document.querySelector('.ndx-walkthrough-index__grid');
    const emptyState = document.querySelector('.ndx-walkthrough-index__empty');
    const countDisplay = document.querySelector('.ndx-walkthrough-index__count');

    let activeFilter = 'all';
    let searchTerm = '';

    // Filter cards
    function filterCards() {
      let visibleCount = 0;

      cards.forEach(function(card) {
        const category = card.dataset.category;
        const name = card.dataset.name || '';
        const description = card.dataset.description || '';
        const headline = card.dataset.headline || '';
        const services = card.dataset.services || '';

        const matchesFilter = activeFilter === 'all' || category === activeFilter;
        const searchText = (name + ' ' + description + ' ' + headline + ' ' + services).toLowerCase();
        const matchesSearch = searchTerm.length < 2 || searchText.includes(searchTerm.toLowerCase());

        if (matchesFilter && matchesSearch) {
          card.hidden = false;
          visibleCount++;
        } else {
          card.hidden = true;
        }
      });

      // Update count
      if (countDisplay) {
        countDisplay.textContent = visibleCount;
      }

      // Show/hide empty state
      if (emptyState) {
        emptyState.hidden = visibleCount > 0;
      }
      if (grid) {
        grid.hidden = visibleCount === 0;
      }

      // Update URL with filter state
      updateUrl();
    }

    // Update URL with current filter/search state
    function updateUrl() {
      const url = new URL(window.location);
      if (activeFilter !== 'all') {
        url.searchParams.set('category', activeFilter);
      } else {
        url.searchParams.delete('category');
      }
      if (searchTerm.length >= 2) {
        url.searchParams.set('q', searchTerm);
      } else {
        url.searchParams.delete('q');
      }
      history.replaceState(null, '', url);
    }

    // Initialize from URL params
    function initFromUrl() {
      const url = new URL(window.location);
      const categoryParam = url.searchParams.get('category');
      const searchParam = url.searchParams.get('q');

      if (categoryParam && ['all', 'ai', 'iot', 'analytics'].includes(categoryParam)) {
        activeFilter = categoryParam;
        filterButtons.forEach(function(btn) {
          const isActive = btn.dataset.filter === activeFilter;
          btn.classList.toggle('ndx-walkthrough-index__filter-btn--active', isActive);
          btn.setAttribute('aria-pressed', isActive ? 'true' : 'false');
        });
      }

      if (searchParam) {
        searchTerm = searchParam;
        if (searchInput) {
          searchInput.value = searchParam;
        }
      }

      filterCards();
    }

    // Filter button click handlers
    filterButtons.forEach(function(btn) {
      btn.addEventListener('click', function() {
        // Update active state
        filterButtons.forEach(function(b) {
          b.classList.remove('ndx-walkthrough-index__filter-btn--active');
          b.setAttribute('aria-pressed', 'false');
        });
        this.classList.add('ndx-walkthrough-index__filter-btn--active');
        this.setAttribute('aria-pressed', 'true');

        activeFilter = this.dataset.filter;
        filterCards();
      });
    });

    // Search input handler
    if (searchInput) {
      searchInput.addEventListener('input', function() {
        searchTerm = this.value.trim();
        filterCards();
      });

      // Handle Enter key
      searchInput.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
          this.value = '';
          searchTerm = '';
          filterCards();
        }
      });
    }

    // Clear search button
    const clearBtn = document.querySelector('[data-clear-search]');
    if (clearBtn) {
      clearBtn.addEventListener('click', function() {
        searchTerm = '';
        activeFilter = 'all';
        if (searchInput) {
          searchInput.value = '';
        }
        filterButtons.forEach(function(btn) {
          const isAll = btn.dataset.filter === 'all';
          btn.classList.toggle('ndx-walkthrough-index__filter-btn--active', isAll);
          btn.setAttribute('aria-pressed', isAll ? 'true' : 'false');
        });
        filterCards();
      });
    }

    // Initialize
    initFromUrl();
  });
</script>
