  <div class="ndx-walkthrough-index__filters">
    <div class="ndx-walkthrough-index__filter-buttons" role="group" aria-label="Filter walkthroughs by category">
      {% for cat in categories %}
        <button type="button"
                class="govuk-button govuk-button--secondary ndx-walkthrough-index__filter-btn{% if cat.id == 'all' %} ndx-walkthrough-index__filter-btn--active{% endif %}"
                data-filter="{{ cat.id }}"
                aria-pressed="{% if cat.id == 'all' %}true{% else %}false{% endif %}">
          {{ cat.label }}
          <span class="ndx-walkthrough-index__filter-count">({{ cat.count }})</span>
        </button>
      {% endfor %}
    </div>

    <div class="govuk-form-group ndx-walkthrough-index__search">
      <label class="govuk-label govuk-visually-hidden" for="walkthrough-search">
        Search walkthroughs
      </label>
      <input type="search"
             id="walkthrough-search"
             class="govuk-input ndx-walkthrough-index__search-input"
             placeholder="Search walkthroughs..."
             data-search-input
             aria-describedby="search-hint">
      <span id="search-hint" class="govuk-visually-hidden">
        Search by scenario name, description, or AWS service
      </span>
    </div>
  </div>

  {# Results count #}
  <div class="ndx-walkthrough-index__results-count" aria-live="polite" aria-atomic="true">
    <p class="govuk-body-s" id="results-count">
      Showing <span class="ndx-walkthrough-index__count">6</span> walkthroughs
    </p>
  </div>

  {# Cards Grid #}
  <div class="ndx-walkthrough-index__grid" aria-live="polite">
    {% for scenario in scenarios.scenarios %}
      {% include "components/walkthrough-card.njk" %}
    {% endfor %}
  </div>

  {# Empty State - shown when no results match #}
  <div class="ndx-walkthrough-index__empty" hidden aria-live="polite">
    <div class="govuk-panel govuk-panel--grey">
      <h2 class="govuk-heading-m">No walkthroughs match your search</h2>
      <p class="govuk-body">Try adjusting your search terms or clear the filter.</p>
      <button type="button" class="govuk-button govuk-button--secondary" data-clear-search>
        Clear search and filters
      </button>
      <p class="govuk-body-s govuk-!-margin-top-4">
        <strong>Suggestions:</strong> Try searching for 'chatbot', 'AI', 'planning', or 'dashboard'
      </p>
    </div>
  </div>
</div>

