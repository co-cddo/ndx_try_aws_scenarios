{# Story 8.4: FOI Redaction Limits Page #}

{% set scenarioId = "foi-redaction" %}
{% set explorationData = exploration[scenarioId] %}
{% set activities = explorationData.activities %}

{% set limitActivities = [] %}
{% for activity in activities %}
  {% if activity.category == "limits" %}
    {% set limitActivities = (limitActivities.push(activity), limitActivities) %}
  {% endif %}
{% endfor %}

<section class="ndx-limits-intro" aria-labelledby="intro-heading">
  <h2 class="govuk-heading-l" id="intro-heading">Test the Boundaries Safely</h2>
  <p class="govuk-body-l">
    Every PII detection system has limits. Understanding them helps you plan
    for real-world FOI processing.
  </p>
  <div class="govuk-inset-text">
    <strong>Safe to explore:</strong> These challenges will not break anything.
    You can always try again with different inputs.
  </div>
  <div class="ndx-limits-progress" data-progress-container>
    <p class="govuk-body">
      <strong>Challenges completed:</strong>
      <span data-completed-count>0</span> of {{ limitActivities | length }}
    </p>
    <div class="ndx-progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="{{ limitActivities | length }}">
      <div class="ndx-progress-bar__fill" style="width: 0%"></div>
    </div>
  </div>
</section>

<section class="ndx-limits-list" aria-labelledby="challenges-heading">
  <h2 class="govuk-visually-hidden" id="challenges-heading">Boundary challenges</h2>
  {% for limit in limitActivities %}
    <article class="ndx-limit-challenge" data-activity-id="{{ limit.id }}" aria-labelledby="limit-title-{{ limit.id }}">
      <header class="ndx-limit-challenge__header">
        <span class="ndx-limit-challenge__number" aria-hidden="true">{{ loop.index }}</span>
        <h3 class="govuk-heading-m ndx-limit-challenge__title" id="limit-title-{{ limit.id }}">{{ limit.title }}</h3>
        {% include "components/exploration/safe-badge.njk" %}
      </header>
      <div class="ndx-limit-challenge__body">
        <p class="ndx-limit-challenge__meta"><span class="govuk-tag govuk-tag--grey">{{ limit.time_estimate }}</span></p>
        <div class="ndx-limit-challenge__learning">
          <strong>What you'll learn:</strong>
          <p class="govuk-body">{{ limit.learning }}</p>
        </div>
        <div class="ndx-limit-challenge__description">
          <h4 class="govuk-heading-s">The Challenge</h4>
          <p class="govuk-body">{{ limit.challenge_description }}</p>
          {% if limit.sample_text %}
            <div class="ndx-limit-challenge__sample">
              <p class="govuk-body"><strong>Try this:</strong></p>
              <code class="ndx-limit-challenge__sample-text">{{ limit.sample_text }}</code>
            </div>
          {% endif %}
        </div>
        <div class="ndx-limit-challenge__expected">
          <h4 class="govuk-heading-s">Expected Behavior</h4>
          <p class="govuk-body">{{ limit.expected_behavior }}</p>
        </div>
        <div class="ndx-limit-challenge__implication">
          <h4 class="govuk-heading-s">Business Implication</h4>
          <p class="govuk-body">{{ limit.business_implication }}</p>
        </div>
        <details class="govuk-details" data-module="govuk-details">
          <summary class="govuk-details__summary"><span class="govuk-details__summary-text">How to recover</span></summary>
          <div class="govuk-details__text">{{ limit.recovery }}</div>
        </details>
        <div class="ndx-limit-challenge__actions">
          <button type="button" class="govuk-button govuk-button--secondary" onclick="completeActivity('{{ scenarioId }}', '{{ limit.id }}')">Mark as complete</button>
        </div>
      </div>
    </article>
  {% endfor %}
</section>

<section class="ndx-limits-next" aria-labelledby="next-heading">
  <h2 class="govuk-heading-l" id="next-heading">Next steps</h2>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-half">
      <div class="ndx-next-card">
        <h3 class="govuk-heading-s">Production Guidance</h3>
        <p class="govuk-body-s">Learn what changes for FOI compliance integration.</p>
        <a href="/walkthroughs/{{ scenarioId }}/explore/production/" class="govuk-link">View production guidance</a>
      </div>
    </div>
    <div class="govuk-grid-column-one-half">
      <div class="ndx-next-card">
        <h3 class="govuk-heading-s">Generate Evidence Pack</h3>
        <p class="govuk-body-s">Create a committee-ready PDF documenting your exploration.</p>
        <a href="/evidence-pack/{{ scenarioId }}/" class="govuk-link">Create Evidence Pack</a>
      </div>
    </div>
  </div>
</section>

<style>
  .ndx-limits-intro { margin-bottom: 40px; }
  .ndx-limits-progress { background: #f8f8f8; padding: 20px; margin-top: 20px; }
  .ndx-progress-bar { height: 8px; background: #b1b4b6; border-radius: 4px; overflow: hidden; margin-top: 10px; }
  .ndx-progress-bar__fill { height: 100%; background: #f47738; transition: width 0.3s ease; }
  .ndx-limit-challenge { border: 1px solid #b1b4b6; margin-bottom: 30px; background: #fff; }
  .ndx-limit-challenge__header { display: flex; align-items: center; gap: 12px; padding: 15px 20px; background: #fff7e6; border-bottom: 1px solid #ffbf47; flex-wrap: wrap; }
  .ndx-limit-challenge__number { display: inline-flex; align-items: center; justify-content: center; width: 32px; height: 32px; background: #f47738; color: #fff; border-radius: 50%; font-weight: 700; font-size: 16px; flex-shrink: 0; }
  .ndx-limit-challenge__title { flex: 1; margin: 0; min-width: 200px; }
  .ndx-limit-challenge__body { padding: 20px; }
  .ndx-limit-challenge__meta { margin-bottom: 15px; }
  .ndx-limit-challenge__learning { background: #f0f4f5; padding: 15px; margin-bottom: 20px; border-left: 4px solid #f47738; }
  .ndx-limit-challenge__learning strong { display: block; margin-bottom: 5px; }
  .ndx-limit-challenge__learning p { margin-bottom: 0; }
  .ndx-limit-challenge__description, .ndx-limit-challenge__expected, .ndx-limit-challenge__implication { margin-bottom: 20px; }
  .ndx-limit-challenge__sample { background: #f3f2f1; padding: 15px; margin-top: 10px; }
  .ndx-limit-challenge__sample-text { font-family: monospace; font-size: 14px; display: block; margin-top: 8px; }
  .ndx-limit-challenge__expected { background: #e8f4e8; padding: 15px; border-left: 4px solid #00703c; }
  .ndx-limit-challenge__expected h4, .ndx-limit-challenge__implication h4 { margin-bottom: 10px; }
  .ndx-limit-challenge__expected p, .ndx-limit-challenge__implication p { margin-bottom: 0; }
  .ndx-limit-challenge__implication { background: #f8f8f8; padding: 15px; border-left: 4px solid #1d70b8; }
  .ndx-limit-challenge__actions { margin-top: 20px; padding-top: 15px; border-top: 1px solid #b1b4b6; }
  .ndx-limits-next { margin-top: 60px; padding-top: 40px; border-top: 4px solid #f47738; }
  .ndx-next-card { padding: 20px; background: #f8f8f8; height: 100%; }
  @media (max-width: 768px) { .ndx-limit-challenge__header { flex-direction: column; align-items: flex-start; } .ndx-next-card { margin-bottom: 20px; } }
</style>
