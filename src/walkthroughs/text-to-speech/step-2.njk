<script>
  // Copy announcement text to clipboard
  function copyAnnouncementText(announcementId, button) {
    {% for announcement in sampleAnnouncements %}
    if (announcementId === '{{ announcement.id }}') {
      var text = {{ announcement.text | dump | safe }};

      navigator.clipboard.writeText(text).then(function() {
        // Success feedback
        var originalText = button.textContent;
        button.textContent = 'Copied!';
        button.classList.add('govuk-button--success');

        setTimeout(function() {
          button.textContent = originalText;
          button.classList.remove('govuk-button--success');
        }, 2000);
      }).catch(function(err) {
        // Fallback: show text in alert for manual copy
        alert('Copy this text:\n\n' + text);
      });
    }
    {% endfor %}
  }
</script>
