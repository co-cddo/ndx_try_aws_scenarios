<script>
  // ROI calculator
  (function() {
    'use strict';

    const calculateBtn = document.getElementById('calculate-tts-savings');
    const resultDiv = document.getElementById('savings-result');

    if (!calculateBtn || !resultDiv) return;

    calculateBtn.addEventListener('click', function() {
      const announcementsPerYear = parseInt(document.getElementById('announcements-per-year').value) || 0;
      const studioCost = parseInt(document.getElementById('studio-cost').value) || 0;
      const avgCharacters = parseInt(document.getElementById('avg-characters').value) || 0;

      // Calculate costs
      const currentAnnualCost = announcementsPerYear * studioCost;
      const pollyPerAnnouncement = (avgCharacters / 1000) * 0.016; // £0.016 per 1000 chars
      const pollyAnnualCost = announcementsPerYear * pollyPerAnnouncement;
      const annualSavings = currentAnnualCost - pollyAnnualCost;
      const costReduction = ((annualSavings / currentAnnualCost) * 100).toFixed(3);
      const complianceValue = 20000; // £20K compliance risk
      const totalBenefit = annualSavings + complianceValue;

      // Update results
      document.getElementById('current-cost').textContent = '£' + currentAnnualCost.toFixed(2);
      document.getElementById('polly-cost').textContent = '£' + pollyAnnualCost.toFixed(2);
      document.getElementById('annual-savings').textContent = '£' + annualSavings.toFixed(2);
      document.getElementById('cost-reduction').textContent = costReduction + '% reduction';
      document.getElementById('total-benefit').textContent = '£' + totalBenefit.toFixed(2);

      // Update committee language
      const financeLanguage = document.getElementById('finance-language');
      if (financeLanguage) {
        financeLanguage.textContent = 'Amazon Polly text-to-speech reduces audio production costs by ' +
          costReduction + '% - from £' + currentAnnualCost.toFixed(0) + ' to £' + pollyAnnualCost.toFixed(2) +
          ' annually for ' + announcementsPerYear + ' announcements. This frees up £' + annualSavings.toFixed(0) +
          ' that can be reallocated to frontline services. Additionally, achieving WCAG 2.1 AA compliance avoids ' +
          'potential penalties up to £20,000 per accessibility breach under PSBAR 2018. Total annual value: £' +
          totalBenefit.toFixed(0) + ' in cost savings and compliance protection.';
      }

      // Show results
      resultDiv.style.display = 'block';
      resultDiv.scrollIntoView({ behavior: 'smooth', block: 'nearest' });

      // Announce results to screen readers
      var announcement = 'Calculation complete. Annual savings of £' + annualSavings.toFixed(2) +
        ', cost reduction of ' + costReduction + '%, total benefit £' + totalBenefit.toFixed(2) + '.';
      var ariaAnnounce = document.getElementById('tts-roi-aria-announce');
      if (ariaAnnounce) {
        ariaAnnounce.textContent = announcement;
      }
    });
  })();
</script>

