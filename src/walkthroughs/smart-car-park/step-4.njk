<script>
  document.addEventListener('DOMContentLoaded', function() {
    const calculateBtn = document.getElementById('calculate-roi');
    const resultsDiv = document.getElementById('roi-results');

    if (calculateBtn) {
      calculateBtn.addEventListener('click', function() {
        // Get input values
        const totalSpaces = parseInt(document.getElementById('total-spaces').value) || 50;
        const currentOccupancy = parseInt(document.getElementById('current-occupancy').value) || 60;
        const pricePerDay = parseInt(document.getElementById('price-per-day').value) || 5;
        const manualHours = parseFloat(document.getElementById('manual-hours').value) || 1.5;
        const hourlyRate = parseInt(document.getElementById('hourly-rate').value) || 25;

        const daysPerYear = 260; // Operating days
        const iotOccupancy = 85; // Target occupancy with IoT
        const awsAnnualCost = 145; // £145/year

        // Calculate revenues
        const currentRevenue = totalSpaces * (currentOccupancy / 100) * pricePerDay * daysPerYear;
        const iotRevenue = totalSpaces * (iotOccupancy / 100) * pricePerDay * daysPerYear;
        const revenueIncrease = iotRevenue - currentRevenue;

        // Calculate labor savings
        const laborSavings = manualHours * daysPerYear * hourlyRate;

        // Calculate totals
        const totalBenefit = revenueIncrease + laborSavings;
        const netBenefit = totalBenefit - awsAnnualCost;
        const roiRatio = Math.round(netBenefit / awsAnnualCost);

        // Update results
        document.getElementById('current-revenue').textContent = '£' + currentRevenue.toLocaleString();
        document.getElementById('iot-revenue').textContent = '£' + iotRevenue.toLocaleString();
        document.getElementById('revenue-increase').textContent = '£' + revenueIncrease.toLocaleString();
        document.getElementById('labor-savings').textContent = '£' + laborSavings.toLocaleString();
        document.getElementById('total-benefit').textContent = '£' + totalBenefit.toLocaleString();
        document.getElementById('net-benefit').textContent = '£' + netBenefit.toLocaleString();
        document.getElementById('roi-percentage').textContent = roiRatio + ':1';

        // Update committee language
        const committeeText = `"IoT sensors transform car park management from reactive to proactive. Real-time occupancy data increases revenue by £${revenueIncrease.toLocaleString()} annually while eliminating manual counting costs of £${laborSavings.toLocaleString()}. Total annual benefit of £${totalBenefit.toLocaleString()} against AWS costs of £${awsAnnualCost} delivers a ${roiRatio}:1 return on investment."`;
        document.getElementById('committee-language').innerHTML = '<strong>Committee language:</strong> ' + committeeText;

        // Show results
        resultsDiv.style.display = 'block';
        resultsDiv.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
      });
    }
  });
</script>

