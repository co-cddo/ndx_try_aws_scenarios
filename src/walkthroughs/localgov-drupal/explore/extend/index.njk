        <div class="ndx-related-card">
          <span class="govuk-tag govuk-tag--blue ndx-related-card__tag">{{ scenario.tag }}</span>
          <h3 class="govuk-heading-s ndx-related-card__title">
            <a href="{{ scenario.url }}" class="govuk-link">{{ scenario.name }}</a>
          </h3>
          <p class="govuk-body-s ndx-related-card__description">{{ scenario.description }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</section>

{# Feedback Section #}
